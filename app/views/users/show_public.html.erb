<% title @user.name %>
	
<div id="user_wrap">

	<!-- Left User Info Column  -->
	<div id="user_info">
		<%= image_tag @user.image_large %>
		<div id="user_tags_wrap">
			<ul id="user_tags">
				<% for tag in @user.tags.uniq %>
				<li><%= link_to tag.name, tag_path(tag.name) %></li>
				<% end %>
			</ul>
			<br class="clear">
		</div>
		<div id="user_badges">
			<div id="profile_cards_wrap">	
				<%= render :partial => "badges/card", :collection => @user.badgeings, :as => :card %>
				<br class="clear">
			</div>
		</div>
	</div>

	<!-- Right User Content Column  -->
	<div id="user_content">
		<% if  @user.current_whois != 0 %>
		<div id="user_whois">
			<%= render :partial => "shared/read_whois", :locals => { :user => @user.name, :note => @whois, :edit => false, :change => false } %>
		</div>
		<% end %>
		<div id="user_statements">
			<%= render :partial => "shared/read_statement", :collection => @user.statements, :as => :statement, :locals => { :moderate => false, :vote => false } %>
		</div>
	</div>
</div>


